<p id="notice"><%= notice %></p>

<h1> <%= @product.name %></h1>



<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail shade">

      <%= image_tag(@product.image_url, class: "img-responsive") %>
       
      <div class="caption">

        <h3><%= @product.name %></h3>
        
        <p><%= @product.description %></p>

        <p>
          <strong>Color:</strong>
          <%= @product.color %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @product.price %> <span class="glyphicon glyphicon-euro" aria-hidden="true"></span>
        </p>
        <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
        <div class="rating"></div>
        <p>
          <%= render 'new_comment' %>
          <%= render 'comments' %>
        </p>
        
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>

      </div>
    </div>
  </div>
  
</div>